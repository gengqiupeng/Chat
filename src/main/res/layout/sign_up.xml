<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root_sign">
    <TextView
        android:id="@+id/textView_welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="70sp"
        android:text="@string/welcome"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="100dp"
        android:gravity="center_horizontal"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_welcome">
        <view.MyEditText
            android:id="@+id/edit_userName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入用户名"
            android:digits="@string/legalChar"
            android:drawableRight="@drawable/delete_signup"
            />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputUserPwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textInputUserName">
        <view.MyEditText
            android:id="@+id/edit_userPwd"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入密码"
            android:drawableRight="@drawable/delete_signup"/>
    </android.support.design.widget.TextInputLayout>
    <Button
        android:id="@+id/button_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="注册"
        android:textSize="@dimen/L_font"
        android:textColor="@color/white"
        android:transitionName="@string/button_login_transition"
        android:layout_below="@id/textInputUserPwd"
        android:layout_margin="@dimen/medium_padding"/>
<TextView
    android:id="@+id/text_to_login"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="登录"
    android:padding="10dp"
    android:layout_below="@id/button_signup"
    android:gravity="center_horizontal"
    android:textColor="@color/colorPrimary"/>
</RelativeLayout>